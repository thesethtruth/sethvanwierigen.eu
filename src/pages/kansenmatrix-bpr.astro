---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.svelte";
import KansenMatrixContent from "../components/KansenMatrix/KansenMatrixContent.svelte";
import { SITE_TITLE } from "../consts";
import "../styles/global.css";
---

<html lang="en">
	<head>
		<BaseHead title={`Kansenmatrix BPR | ${SITE_TITLE}`} description="Multi-criteria analyse voor het prioriteren van kansen bij BPR." />
	</head>
	<body class="bg-slate-900 text-slate-200 flex flex-col min-h-screen">
		<Header client:load currentPath={Astro.url.pathname} />
		<main class="flex-1">
			<KansenMatrixContent client:only="svelte" />
		</main>
		<Footer />
	</body>
</html>
