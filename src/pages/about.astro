---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.svelte";
import AboutContent from "../components/About/AboutContent.svelte";
import { SITE_TITLE } from "../consts";
import "../styles/global.css";
---

<html lang="en">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description="Energy systems modeller, physics teacher by qualification, coach by nature. Education, experience, research, and skills." />
	</head>
	<body class="bg-slate-900 text-slate-200 flex flex-col min-h-screen">
		<Header currentPath={Astro.url.pathname} />
		<main class="flex-1">
			<AboutContent client:only />
		</main>
		<Footer />
	</body>
</html>
